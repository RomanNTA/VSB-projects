@using AppNetCoreMVC_SchollSystem.DTO
@model SubjectDTO

<form asp-action="Create" method="post">

    @* Div ve kterém vyskakují chybové hlášky *@
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        
        @* asp-validation-for ... se dává obvykle do SPANu *@
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <input class="btn btn-success my-3" type="submit" value="Create" />
    <input class="btn btn-danger my-3" type="reset" value="Reset" />
</form>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}