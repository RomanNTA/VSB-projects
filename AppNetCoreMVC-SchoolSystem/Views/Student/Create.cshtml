@using AppNetCoreMVC_SchollSystem.DTO
@model StudentDTO

<h4>Create a new student</h4>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input type="text" asp-for="FirstName" class="form-control" />
        <label asp-for="LastName"></label>
        <input type="text" asp-for="LastName" class="form-control" />
        <label asp-for="Email"></label>
        <input type="text" asp-for="Email" class="form-control" />
        <label asp-for="DateOfBirth"></label>
        <input type="date" asp-for="DateOfBirth" class="form-control" />
    </div>
    <input class="btn btn-success my-3" type="submit" value="Create" />
    <input class="btn btn-danger my-3" type="reset" value="Reset" />
</form>
